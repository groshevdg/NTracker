<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="5dp"
    app:cardCornerRadius="32dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/inCategoryNameTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Категория: авто"
            android:textSize="14sp"
            style="@style/NewsTextStyle" />

        <TextView
            android:id="@+id/inTitleTextView"
            style="@style/NewsTextStyle"
            app:layout_constraintTop_toBottomOf="@id/inCategoryNameTextView"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Длинный заголовок с названием новости"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inDescriptionTextView"
            style="@style/NewsTextStyle"
            app:layout_constraintTop_toBottomOf="@id/inTitleTextView"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Описание новости"
            android:textSize="16sp"
            android:layout_marginBottom="0dp" />

        <TextView
            android:id="@+id/inPublished"
            style="@style/NewsTextStyle"
            app:layout_constraintTop_toBottomOf="@id/inDescriptionTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="15.08.2020 15:15"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>